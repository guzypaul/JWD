<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.training.by/paper"
        xmlns:tns="http://www.training.by/paper">

    <element name="papers">
        <complexType>
            <sequence>
                <element name="paper" type="tns:Paper"
                         minOccurs="1"
                         maxOccurs="16" />
            </sequence>
        </complexType>
    </element>
    <complexType name="Paper">
        <sequence>
            <element name="title" type="string" />
            <element name="type" type="tns:Type" />
            <element name="monthly" type="boolean" />
            <element name="chars" type="tns:Chars" />
        </sequence>
        <attribute name="id" type="int" use="required" />
    </complexType>

    <complexType name="Chars">
        <sequence>
            <element name="color" type="boolean" />
            <element name="volume" type="int" />
            <element name="gloss" type="boolean" />
            <element name="index" type="boolean" />
        </sequence>
    </complexType>

    <simpleType name="Type">
        <restriction base="string">
            <enumeration value="magazine"/>
            <enumeration value="newspaper"/>
            <enumeration value="booklet"/>
        </restriction>
    </simpleType>
</schema>